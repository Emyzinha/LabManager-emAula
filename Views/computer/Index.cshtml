@model IEnumerable<MvcLabManager.Models.Computer>

@{
    ViewData["Title"] = "computadores";
}
<h1>@ViewData["Title"]</h1>

@if (Model.Count() == 0)
{
    <p>Nenhum computador cadastrado</p>
}
else{
    <table class = "table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ram</th>
                <th>Processador</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var computer in Model)
            {
                <tr>
                    <td>@computer.Id</td>
                    <td>@computer.Ram</td>
                    <td>@computer.Processor</td>
                    <td><a class= "btn btn-primary btn-sm"
                      href="/Computer/Show/@computer.Id"> ver</a>
                        
                    <a class = "btn btn-danger" href = "/Computer/Delete/@computer.Id">Delete</a>    
                  
                </tr>
            }
        </tbody>
    </table>
}